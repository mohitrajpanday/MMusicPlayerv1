<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    android:orientation="vertical"
    tools:context="com.example.mohitrajpanday.mmusicplayer.MainActivity">

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/title" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        tools:listitem="@android:layout/activity_list_item">

    </android.support.v7.widget.RecyclerView>

    <SeekBar
        android:id="@+id/seekBar2"
        android:layout_width="match_parent"

        android:layout_height="5dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:progressDrawable="@drawable/progress"
        android:thumb="@drawable/thumb" >
    </SeekBar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="35dp"
        android:paddingRight="35dp"
        android:paddingBottom="10dp"
        android:paddingTop="10dp">

        <Button
            android:id="@+id/previous"
            android:layout_width="20dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:background="@drawable/previous_normal"
            android:src="@drawable/previous_normal" />

        <Button
            android:id="@+id/backward"
            android:layout_width="20dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:background="@drawable/back_normal"
            android:src="@drawable/back_normal" />

        <Button
            android:id="@+id/play"
            android:layout_width="20dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:background="@drawable/play2"
            android:text="P"
            android:textColor="@android:color/transparent" />

        <Button
            android:id="@+id/forward"
            android:layout_width="20dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:background="@drawable/forward_normal"
            android:src="@drawable/forward_normal" />

        <Button
            android:id="@+id/next"
            android:layout_width="20dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:background="@drawable/next_normal"
            android:src="@drawable/next_normal" />
    </LinearLayout>


</LinearLayout>
